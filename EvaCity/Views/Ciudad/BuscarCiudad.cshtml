@model EvaCity.Models.Entidades.Ciudad

@{
    ViewBag.Title = "Secciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/css")

@{
    var valueCiudad = "";
    if (System.Web.HttpContext.Current.Session["ciudad"] != null)
    {
        valueCiudad = System.Web.HttpContext.Current.Session["ciudad"].ToString();
        <h4 class="text-center text-info">Ciudad: @valueCiudad</h4>
    }
    else
    {
        <h4 class="text-center text-info">No has seleccionado ninguna ciudad.</h4>
    }
}

<div class="row">
    <div class="row">
        <div class="col-md-4 panel-seccion">
            <a href="@Url.Action("Informacion", "Proyecto", new { seccion = 1, ciudad = valueCiudad })" class="boton-seccion">Contaminación</a>
        </div>
        <div class="col-md-4 panel-seccion">
            <a href="@Url.Action("Informacion", "Proyecto", new { seccion = 2, ciudad = valueCiudad })" class="boton-seccion">Energías Renovables</a>
        </div>
        <div class="col-md-4 panel-seccion">
            <a href="@Url.Action("Informacion", "Proyecto", new { seccion = 2, ciudad = valueCiudad })" class="boton-seccion">Reciclaje</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-2 panel-seccion-sl">
            <a href="@Url.Action("Informacion", "Proyecto", new { seccion = 2, ciudad = valueCiudad })" class="boton-seccion">Movilidad Sostenible</a>
        </div>
        <div class="col-md-4 col-md-offset-1 panel-seccion-sl">
            <a href="@Url.Action("Informacion", "Proyecto", new { seccion = 2, ciudad = valueCiudad })" class="boton-seccion">Negocios Sostenibles</a>
        </div>
    </div>
</div>