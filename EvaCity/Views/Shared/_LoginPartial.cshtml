@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Cuenta", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink("Configuración", "Index", "Configuracion", routeValues: null, htmlAttributes: new { title = "Configuracion" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Salir</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registro", "Registro", "Cuenta", routeValues: null, htmlAttributes: new { id = "registroLink" })</li>
        <li>@Html.ActionLink("Entrar", "Login", "Cuenta", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
